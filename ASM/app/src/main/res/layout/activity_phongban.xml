    <androidx.appcompat.widget.Toolbar
        android:layout_marginTop="20sp"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#53BC42"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textColor="@color/black"
            android:textSize="30sp"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_marketing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@id/toolbar"
        android:background="#D14C4C"
        >

        <ImageView
            android:layout_width="230sp"
            android:layout_height="140sp"
            android:src="@drawable/marketting"
            />

        <TextView
            android:id="@+id/tv_maketing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maketing"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dev"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/layout_marketing"
        android:background="#3BC683">

        <ImageView
            android:layout_width="230sp"
            android:layout_height="140sp"
            android:src="@drawable/dev2" />

        <TextView
            android:id="@+id/tv_devoloper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:text="Developer"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20sp"
        android:layout_below="@id/layout_dev"
        android:background="#3BC683">

        <ImageView
            android:layout_width="230sp"
            android:layout_height="140sp"
            android:src="@drawable/taichinh" />

        <TextView
            android:id="@+id/tv_finance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:text="Finance"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#CABCB9"
    android:layout_alignParentBottom="true"
    android:paddingTop="10sp"
    >

    <ImageView
        android:id="@+id/icon_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/house1"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/icon_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new1"
        android:layout_weight="1"
        />

    <ImageView
        android:id="@+id/icon_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting1"
        android:layout_weight="1"
        />

    </LinearLayout>

</RelativeLayout>